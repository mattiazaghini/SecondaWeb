@model DBContext
@{
    
    ViewData["Title"] = "Cancella";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <title>Document</title>
</head>
<body>
    <div class="text-center">
    <h1 class="display-4">ECCO L'ELENCO DELLE PERSONE</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h1>Database Aggiornato con successo!</h1>
    <h2>Ecco l'elenco delle persone prenotate aggiornato!</h2>
    
    <table class="w3-table w3-striped">
        <thead><tr><th>Nome</th><th>Email</th></tr></thead>
        <tbody>
            @foreach(Prenotazione p in Model.Prenotazioni)
            {
            <tr><td>@p.Nome</td><td>@p.Email</td></tr>
            }
        </tbody>
    </table>
    
</div>
</body>
</html>


