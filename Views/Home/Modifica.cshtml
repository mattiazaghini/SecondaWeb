@model Zaghini.Mattia._5H.SecondaWeb.Models.Prenotazione
@{
    ViewData["Title"] = "Modifica";
    Prenotazione prenota = Model;
}

<div class="text-center">
    <h1 class="display-4">Modifica</h1>
    <form class="m-2" method="POST" asp-action="Modifica">
        <div class="form-group">
            <label asp-for="Nome">Il tuo nome</label>
            <input asp-for="Nome" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email">La tua Email</label>
            <input asp-for="Email" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Prenota</button>
    </form>
</div>